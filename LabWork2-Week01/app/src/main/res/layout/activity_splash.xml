<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"



    tools:context=".activities.SplashActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#ff4b3a"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!--Thiết kế giao diện trang loading -->

        <!--Logo-->
        <ImageView
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img1"
            android:src="@drawable/ellipse"/>

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/logo"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/img1"
            app:layout_constraintStart_toStartOf="@id/img1" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/img1"
            android:id="@+id/textView1"
            android:text="Food for"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_35ssp"
            android:layout_marginStart="@dimen/_25sdp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/textView1"
            android:id="@+id/textView2"
            android:text="EveryOne"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_50ssp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/face1"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_290sdp"
            android:src="@drawable/face1"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"

            />

        <ImageView
            android:id="@+id/face2"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_250sdp"
            android:src="@drawable/face2"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="@dimen/_60sdp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30sdp"
            android:textSize="@dimen/_18ssp"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:id="@+id/getting"
            android:text="Get Started"
            android:textStyle="bold"
            android:background="@drawable/back_tv"
            android:textColor="#ff4b3a"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>